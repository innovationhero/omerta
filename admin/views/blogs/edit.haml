.block
  .secondary-navigation
    %ul.wat-cf
      %li.first=link_to pat(:list), url(:blogs, :index)
      %li=link_to pat(:new), url(:blogs, :new)
      %li.active=link_to pat(:edit), url(:blogs, :edit, :id => @blog.id)
  .content
    %h2.title
      =pat(:edit)
      =mt(:blog)
    .inner
      -form_for :blog, url(:blogs, :update, :id => @blog.id), :method => :put, :class => :form do |f|
        =partial "blogs/form", :locals => { :f => f }

-content_for :sidebar, partial("base/sidebar")
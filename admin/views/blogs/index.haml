.block
  .secondary-navigation
    %ul.wat-cf
      %li.first.active=link_to pat(:list), url(:blogs, :index)
      %li=link_to pat(:new), url(:blogs, :new)
  .content
    %h2.title
      =pat(:all)
      =mt(:blog)
    .inner
      %table.table
        %tr
          %th.first=mat(:blog, :title)
          %th=mat(:blog, :link)
          %th=mat(:blog, :tagline)
          %th=mat(:blog, :created_at)
          %th=mat(:blog, :updated_at)
          %th.last="&nbsp;"
        -@blogs.each do |blog|
          %tr
            %td.first=blog.title
            %td=blog.link
            %td=blog.tagline
            %td=blog.created_at
            %td=blog.updated_at
            %td.last
              =button_to pat(:edit), url(:blogs, :edit, :id => blog.id), :method => :get, :class => :button_to
              ="|"
              =button_to pat(:delete), url(:blogs, :destroy, :id => blog.id), :method => :delete, :class => :button_to
      .actions-bar.wat-cf
        .actions="&nbsp;"

-content_for :sidebar, partial("base/sidebar")